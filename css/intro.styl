.index
  .test
    div
      width: 9em;
      margin: 1.8em 1.2em;
      background: url("assets/map.png");
      float: left;
      padding: 6.7em 0 1em;
      font-size: 5em;
      text-transform: uppercase;
      font-weight: bold;
      text-align: center;
      font-kerning: inherit;
      background-size: 9em;
      background-repeat: no-repeat;
      cursor: pointer
    & :nth-child(2) 
      float: right;
      background: url("assets/map2.png");
      background-size: 9em;
      background-repeat: no-repeat;
      
      
  > header
    background: url("assets/logo.png") no-repeat;
    z-index: 3;
    height: 10em;
    background-size: 23em;
    position: absolute;
    top: 0;
    left: 50%;
    width: 23em;
    margin-left: -12em;
    
  > footer
    background-size: 23em;
    position: absolute;
    bottom: 4em;
    left: 50%;
    width: 23em;
    margin-left: -12em;  
    .set_lang
      text-transform: uppercase
      text-decoration: none
      color: #075e7d
      text-align: center
      font-size: 3em
      display: block
      z-index: 10
      
      
.quiz, .result, .answer
  header
    height: 7em

    .restart 
      float: left
      font-size: 3em;
      margin: 1em 2em;
      color: #e26d2d;
      text-transform: uppercase;      
        
    .set_lang 
      float: right
      font-size: 3em;
      margin: 1em 2em;
      color: #e26d2d;
      text-transform: uppercase;      
      
.intro 
  article
    text-align: center;
    h1
      font-size: 6.3em
      text-transform: none
      font-weight: bolder
      margin: 1.7em 2em 0
      line-height: 1.2em
    button
      font-size: 8em
      text-transform: uppercase
      font-family: Amasis, serif
      font-weight: bold
      background: #e26d2d
      color: #075e7d
      padding: 0.1em 0.3em
      margin-top: 1.15em
      border: 0.07em solid #78c1df
    
.quiz
  article
    text-align: center
    img
      height: 29em
    h2
      font-size: 3.86em
    ol
        text-align: left
        width: 33em
        margin: 0
        background: #FFF
        padding: 0.1em 4.1em 0.1em 15em
        font-size: 2.3em
        list-style-type: lower-alpha
        li
            margin: 0.6em 0
            cursor: pointer
            
.answer
  article
    text-align: center  
    img
      height: 29em    
    h2
      text-align: left;
      background: #FFF;
      padding: 1em 2em;
      font-size: 3.1em;        
    button
      font-size: 5em
      text-transform: uppercase
      font-family: Amasis, serif
      font-weight: bold
      background: #e26d2d
      color: #075e7d
      padding: 0.1em 0.3em
      margin-top:0
      border: 0.06em solid #78c1df
    h3
      display: none
        
.result
  article
    > div
      border: 0.3em solid #78c1df
      text-align: center
      margin: 16em 10em
      padding: 2em
      h2
        font-size: 4em
      h3
        font-size: 3em
      
.quiz
  .clothing
    img
      display: none
    h2
      font-size: 4em;
      margin: 3.5em 3em;
#quiz1
  article
    .personality
      &.q5 
        h2
          font-size: 2.2em
          
      &.q8, &.a4
        h2
          font-size: 2.5em
          
      
    .clothing
      &.a1
        h2
          font-size: 2.2em
      &.a3, &.a4, &.a6, &.a7, &.a8, &.a9
        h2
          font-size: 2.5em
      &.q1, &.q5
        h2
          font-size: 3.5em;
      &.a5
        h2
          font-size: 1.6em;
    
    
#quiz2
  .panel
    article
      margin-top: 16em
    &.quiz article 
      ol
        padding: 0.1em 4.1em 0.1em 3em;
        font-size: 4em;
        width: 12em;
      h2
        font-size: 5em;
        margin: 1em 0.2em;
      .q7 h2
        font-size: 3.9em;
        

    &.answer article 
      h2      
        text-align:justify
      h3
        font-size: 3em
        display:block
  .index
    .test
      div
        width: 11em;
        margin: 1.8em 1.2em;
        background: url("assets/map3.png");
        float: left;
        padding: 8.7em 0 1em;
        font-size: 5em;
        text-transform: uppercase;
        font-weight: bold;
        text-align: center;
        font-kerning: inherit;
        background-size: 11em;
        background-repeat: no-repeat;
        cursor: pointer
        span
          font-size: 0.9em
          display: block
          border: 0.1em solid #78c1df
          padding: 0.4em 0
    > footer
      bottom: 7em

          
